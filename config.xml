<?xml version='1.0' encoding='utf-8'?>
<widget id="com.lokesh.mpau" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>mobile PAU</name>
    <description>
	Punjab Agricultural University's Mabile Application
    </description>
    <author email="lokjain@pau.edu" href="http://www.pau.edu">
        Dr. Lokesh Jain
    </author>
    <content src="index.html" />
    <preference name="auto-hide-splash-screen" value="true" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
